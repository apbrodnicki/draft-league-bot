{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard-with-typescript",
		"plugin:@stylistic/disable-legacy"
	],
	"ignorePatterns": [
		"dist",
		"node_modules"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@stylistic"
	],
	"rules": {
		"@stylistic/eol-last": [
			"error",
			"always"
		],
		"@stylistic/quotes": [
			"error",
			"single"
		],
		"@stylistic/semi": [
			"error",
			"always"
		],
		"@stylistic/indent": [
			"error",
			"tab"
		]
	}
}